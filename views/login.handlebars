<link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.5/css/materialize.min.css">
<link rel="stylesheet" href="../public/css/login.css"
<body>
  <div class="login-main">
    <center class="login-container container">
      <h5 class="blue-grey-text">Log In</h5>
        <div class="z-depth-1 grey lighten-4 row" style="display: inline-block; padding: 32px 48px 0px 48px; border: 1px solid #EEE;">
          <form class="login-form col s12">
           <div class="row">
            <div class="col s12">
            </div>
           </div>
           <div class="row">
              <div class="input-field col s12">
                <label for="email-login">Email:</label>
                <input type="text" id="email-login" />
              </div>
           </div>
           <div class="row">
              <div class="input-field col s12">
                <label for="password-login">Password:</label>
                <input type="password" id="password-login" />
              </div>
           </div>
           <br />
            <div class="btn-container row">
              <button type="submit" class="col s12 btn btn-large waves-effect indigo">Log In!</button>
            </div>
          </form>
        </div>
    </center>
    <center class="login-container container">
      <h5 class="blue-grey-text">Sign Up</h5>
        <div class="z-depth-1 grey lighten-4 row" style="display: inline-block; padding: 32px 48px 0px 48px; border: 1px solid #EEE;">
          <form class="signup-form">
          <div class="row">
              <div class="input-field col s12">
                <label for="username-signup">Username:</label>
                <input type="text" id="username-signup" />
              </div>
          </div>
            <div class="row">
              <div class="input-field col s12">
                <label for="email-signup">Email:</label>
                <input type="text" id="email-signup" />
              </div>
            </div>
           <div class="row">
              <div class="input-field col s12">
                <label for="password-signup">Password:</label>
                <input type="password" id="password-signup" />
              </div>
           </div>
            <div class="btn-container row">
              <button type="submit" class="col s12 btn btn-large waves-effect indigo">Sign Up!</button>
            </div>
          </form>
        </div>
    </center>
  </div>
</body>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.2.1/jquery.min.js"></script>
