
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.2.1/css/bootstrap.min.css">
  <link rel="stylesheet" href="../public/css/login.css"
</head>
<body>

  <Div class="text-center">  
    <img src="../public/images/logo.png" height="50px" width="50px"><h1>Hospitum</h1>
  </Div>
    <div class="container grid">
      <section class="login-container container login-form">
        <form>
          <h2 class="text-center mb-4">Log In</h2>
          <!--Email input-->
          <div class="form-group mb-4">
            <input type="text" id="email-login" class="form-control" placeholder="Email"/>
          </div>
          <!--password input-->
          <div class="form-group mb-4">
            <input type="password" id="password-login" class="form-control" placeholder="Password"/>
          </div>
          <!--Submit button-->
          <div class="btn-container form-group mb-4">
            <button type="submit" class="btn btn-primary btn-block">Log In!</button>
          </div>
        </form>
      </section>
  
      <section class="login-container container login-form">
        <form class="signup-form">
          <h2 class="text-center mb-4">Sign Up</h2>
  
          <!--username input-->
          <div class="form-group mb-4">
              <input type="text" id="username-signup" class="form-control" placeholder="Username"/>
          </div>
    
          <!--email input-->
          <div class="form-group mb-4">
              <input type="text" id="email-signup" class="form-control" placeholder="Email"/>
          </div>
    
          <!--password input-->
          <div class="form-group mb-4">
              <input type="password" id="password-signup" class="form-control" placeholder="Password"/>
          </div>
    
          <!--submit buttoin-->
          <div class="form-group mb-4">
              <button class="btn btn-primary btn-block" type="submit">Sign Up!</button>
          </div>
        </form>
      </section>
    </div>
  </body>
<script src="/js/login.js"></script>